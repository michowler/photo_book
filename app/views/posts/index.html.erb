  <div class="row">
     <div class="col-md-12">
    <% @posts.each do |p| %>
    
       <div class="column">
         <div class="col-sm-6 col-md-4">
           <div class="thumbnail">
            <% if p.photo? %>
            <img><%= image_tag p.photo.medium, class:"img-response" %></img>
            <% else %> 
              <img src="..." alt="...">
            <%end%>
             <div class="caption">
             <p><%= p.tags.first.month_name %></p>
             <p><%= time_ago_in_words(p.time_ago) unless p.time_ago.blank?%> ago<p><br>
               <h4><%= link_to p.title, post_path(p.id) %></h4>
               <p><span class=""><%= p.description %></span></p>   
             </div>
           </div>
         </div>
       </div>
    <% end %>
     </div>
  </div>
</div>

<%= will_paginate @posts, previous_label: "Back", next_label: "More", inner_window: 1, outer_window: 0 %>